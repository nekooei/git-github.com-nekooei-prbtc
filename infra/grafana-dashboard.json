{
  "dashboard": {
    "title": "Mining Proxy Metrics",
    "tags": ["mining", "stratum"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Total Hashrate (TH/s)",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(stratum_accepted_shares_total[1m]) * on(client_id, pool_host) group_left stratum_current_difficulty * 4294967296 / 1e12)",
            "legendFormat": "Total Hashrate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "TH/s",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "yellow" },
                { "value": 10, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        }
      },
      {
        "title": "Hashrate by Worker (TH/s)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 18, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "rate(stratum_accepted_shares_total[1m]) * on(client_id, pool_host) group_left stratum_current_difficulty * 4294967296 / 1e12",
            "legendFormat": "{{client_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "TH/s",
            "decimals": 2,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "never"
            }
          }
        }
      },
      {
        "title": "Current Difficulty",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "stratum_current_difficulty",
            "legendFormat": "{{client_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "blue" }
              ]
            }
          }
        }
      },
      {
        "title": "Shares/min",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
        "targets": [
          {
            "expr": "sum(rate(stratum_accepted_shares_total[1m]) * 60)",
            "legendFormat": "Accepted",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "value_and_name"
        }
      },
      {
        "title": "Hashrate Stability (5m avg)",
        "type": "timeseries",
        "gridPos": { "h": 4, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "sum(rate(stratum_accepted_shares_total[5m]) * on(client_id, pool_host) group_left stratum_current_difficulty * 4294967296 / 1e12)",
            "legendFormat": "5min Average",
            "refId": "A"
          },
          {
            "expr": "sum(rate(stratum_accepted_shares_total[1m]) * on(client_id, pool_host) group_left stratum_current_difficulty * 4294967296 / 1e12)",
            "legendFormat": "1min Average",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "TH/s",
            "decimals": 2,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 5
            }
          }
        }
      },
      {
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "h": 6, "w": 12, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "stratum_active_connections",
            "legendFormat": "{{client_id}} -> {{pool_host}}"
          }
        ]
      },
      {
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "h": 6, "w": 12, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "stratum_active_connections",
            "legendFormat": "{{client_id}} -> {{pool_host}}"
          }
        ]
      },
      {
        "title": "Bytes Transferred (Rate)",
        "type": "graph",
        "gridPos": { "h": 6, "w": 12, "x": 12, "y": 12 },
        "targets": [
          {
            "expr": "rate(stratum_bytes_sent_total[5m])",
            "legendFormat": "Sent - {{client_id}}"
          },
          {
            "expr": "rate(stratum_bytes_received_total[5m])",
            "legendFormat": "Received - {{client_id}}"
          }
        ]
      },
      {
        "title": "Accepted vs Rejected Shares",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 18 },
        "targets": [
          {
            "expr": "rate(stratum_accepted_shares_total[5m])",
            "legendFormat": "Accepted - {{client_id}}"
          },
          {
            "expr": "rate(stratum_rejected_shares_total[5m])",
            "legendFormat": "Rejected - {{client_id}}"
          }
        ]
      },
      {
        "title": "Reject Rate %",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 18 },
        "targets": [
          {
            "expr": "100 * rate(stratum_rejected_shares_total[5m]) / (rate(stratum_accepted_shares_total[5m]) + rate(stratum_rejected_shares_total[5m]))",
            "legendFormat": "{{client_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "title": "Request-Response Latency (p95)",
        "type": "graph",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 26 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(stratum_request_response_seconds_bucket[5m])) by (le, client_id))",
            "legendFormat": "p95 - {{client_id}}"
          }
        ]
      },
      {
        "title": "Connection Errors",
        "type": "graph",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 26 },
        "targets": [
          {
            "expr": "rate(stratum_connection_errors_total[5m])",
            "legendFormat": "{{reason}} - {{client_id}}"
          }
        ]
      },
      {
        "title": "Total Connections (24h)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 26 },
        "targets": [
          {
            "expr": "sum(increase(stratum_connections_total[24h]))",
            "legendFormat": "Connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "title": "30-Day Bandwidth (GB)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 0, "y": 32 },
        "targets": [
          {
            "expr": "(increase(stratum_bytes_sent_total[30d]) + increase(stratum_bytes_received_total[30d])) / 1e9",
            "legendFormat": "{{client_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "decimals": 2
          }
        }
      },
      {
        "title": "30-Day Accepted Shares",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 8, "y": 32 },
        "targets": [
          {
            "expr": "increase(stratum_accepted_shares_total[30d])",
            "legendFormat": "{{client_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "title": "Average Hashrate (24h)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 16, "y": 32 },
        "targets": [
          {
            "expr": "sum(rate(stratum_accepted_shares_total[24h]) * on(client_id, pool_host) group_left stratum_current_difficulty * 4294967296 / 1e12)",
            "legendFormat": "24h Average",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "TH/s",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 10, "color": "yellow" },
                { "value": 25, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      }
    ]
  }
}
